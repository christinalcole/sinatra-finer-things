<div class="light-container clear">
  <h3 class="table-title">Book Details</h3>

  <% if flash.has?(:message) %>
    <p><%= flash[:message] %></p>
  <% end %>

  <br>

  <h3><%= @book.name %> by <%= @book.author %></h3>

  <p>This book is in the collection of <%= @book.users.count %> club member(s).</p>

  <button class="table-button"><a href="/books/<%= @book.slug %>/edit">Edit Book Details</a></button>

  <form method="POST" action="/books/<%= @book.slug %>/delete">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" id="table-submit" value="Delete Book">
  </form>
</div>
