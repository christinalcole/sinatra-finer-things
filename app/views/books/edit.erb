<div class="light-container clear">
  <h3 class="title-2">Edit book details below</h3><br>

  <% if flash.has?(:message) %>
    <% flash[:message].uniq.each do |message| %>
    <p id="flash-message"><%= message %>.</p>
    <% end %>
  <% end %>

  <form method="POST" action="/books/<%= @book.slug %>">
    <input type="hidden" name="_method" value="PATCH">
    <label class="title">Title: </label>
    <input type="text" name="book[name]" size="40" value="<%= @book.name %>"><br>
    <label class="title">Author: </label>
    <input type="text" name="book[author]" size="40" value="<%= @book.author %>"><br></br>
    <div class="submit">
        <input type="submit" name="submit" id="submit-1" value="Edit Book">
    </div>
  </form>
</div>
