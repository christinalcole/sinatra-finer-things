<div class="form-container">
  <h2>Add a new book to your collection</h2>

  <% if flash.has?(:message) %>
    <% flash[:message].uniq.each do |message| %>
    <p id="flash-message"><%= message %>.</p>
    <% end %>
  <% end %>

  <form method="POST" action="/books">
    <label class="title">Title: </label>
    <input type="text" name="book[name]" size="40" placeholder="title"><br>
    <label class="title">Author: </label>
    <input type="text" name="book[author]" size="40" placeholder="author"><br></br>
    <div class="submit">
      <input type="submit" id="submit-1" name="submit" value="Add Book">
    </div>
  </form>
</div>
