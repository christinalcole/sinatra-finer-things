<h1>Welcome to Finer Things</h1>
<h2>No paper, no plastic, and no work talk allowed</h2>

<%= @user.name %>'s Finer Things

<% if flash.has?(:message) %>
  <p><%= flash[:message] %></p>
<% end %>

<h3>Fine Books</h3>
<% if @user.books.empty? %>
  <p>You don't have any books in your collection. Add one <a href="/books/new">here</a></p>
<% else %>
  <ol>
  <% @user.books.each do |book| %>
    <li><%= book.title %> by <%= book.author %>  <a href="/books/<%= book.id %>">details</a>
       <form method="POST" action="/books/<%= book.id %>/remove">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="remove book from collection">
      </form>
    </li>
  <% end %>
  <li>Add a new book to your collection <a href="/books/new">here</a></li>
  </ol>
<% end %>

<h3>Fine Music</h3>
<% if @user.songs.empty? %>
  <p>You don't have any music in your collection. Add one <a href="/songs/new">here</a></p>
<% else %>
  <ol>
  <% @user.songs.each do |song| %>
    <li><%= song.name %> by <%=song.artist %></li>
  <% end %>
  </ol>
<% end %>

<h3>Fine Art</h3>
<% if @user.artworks.empty? %>
  <p>You don't have any art in your collection. Add one <a href="/artworks/new">here</a></p>
<% else %>
  <ol>
  <% @user.artworks.each do |artwork| %>
    <li><%= artwork.name %> by <%= artwork.artist %> (<%= artwork.category %>)</li>
  <% end %>
  </ol>
<% end %>
