<div class="form-container">
  <h2>Log In to enter the Club</h2>

  <% if flash.has?(:message) %>
    <p id="flash-message"><%= flash[:message] %></p>
    <p id="flash-message">If you don't have an account, sign up <a href="/signup" id="flash-message-link">here.</a></p>
  <% end %>

  <form method=POST action='/login'>
    <label>Your username: </label>
    <input type="text" name="user[name]" placeholder="name"><br></br>
    <label>Your password: </label>
    <input type="text" name="user[password]" placeholder="password"><br></br>
    <input type="submit" name="Log In" id="submit" value="Log In">
  </form>

  <h3>Not a member?  <button class="inline"><a href="/signup">Sign up</a></button></h3>
</div>
