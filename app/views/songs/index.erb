<div class="light-container clear">
  songs index page
  <h1>The Finer Things Club Playlist, a listing of all the music in the database</h1>

  <p> There are currently <%= @songs.count %> pieces of fine music enjoyed by the Club:<p>

  <table>
    <thead>
      <th>Name</th>
      <th>Artist</th>
      <th></th>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%= song.name %></td>
          <td><%= song.artist %></td>
          <td><button class="table-button"><a href="/songs/<%= song.slug %>"> details</a></button>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
