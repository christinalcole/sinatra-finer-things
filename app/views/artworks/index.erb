<div class="light-container clear">
  <h3 class="title-2">The Finer Things Club Gallery, a listing of all the works of art in the database</h3>

  <p> There are currently <%= @artworks.count %> pieces of fine art in the Club's gallery:<p><br>

    <% if flash.has?(:message) %>
      <p id="flash-message"><%= flash[:message] %></p>
    <% end %>

  <table>
    <thead>
      <th>Name</th>
      <th>Artist</th>
      <th>Type of Art</th>
      <th></th>
    </thead>

    <tbody>
      <% @artworks.each do |art| %>
        <tr>
          <td><%= art.name %></td>
          <td><%= art.artist %></td>
          <td><%= art.category %></td>
          <td><button class="button-1"><a href="/artworks/<%= art.slug %>"> details</a></button>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
